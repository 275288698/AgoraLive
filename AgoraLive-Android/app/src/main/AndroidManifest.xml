<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.agora.vlive">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.live.HostInLiveActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".ui.live.SingleHostActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".ui.live.HostPKLiveActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".ui.live.LivePrepareActivity"
            android:screenOrientation="portrait"
            android:noHistory="true"/>
    </application>
</manifest>
