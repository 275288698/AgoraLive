<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="@drawable/dark_background">
    <RelativeLayout
        android:id="@+id/host_in_top_participant_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <io.agora.vlive.ui.components.LiveHostNameLayout
            android:id="@+id/host_in_name_pad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>
        <io.agora.vlive.ui.components.LiveRoomParticipantLayout
            android:id="@+id/host_in_participant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <io.agora.vlive.ui.components.LiveBottomButtonLayout
        android:id="@+id/host_in_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_bottom_layout_height"
        android:layout_alignParentBottom="true"/>
    <io.agora.vlive.ui.components.LiveRoomMessageList
        android:id="@+id/message_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_message_list_height"
        android:layout_above="@id/host_in_bottom_layout" />
</RelativeLayout>
