<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_background">
    <RelativeLayout
        android:id="@+id/host_in_top_participant_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="@dimen/activity_horizontal_margin">
        <RelativeLayout
            android:layout_width="@dimen/live_host_in_video_size"
            android:layout_height="@dimen/live_host_in_video_size">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fake_icon_1"/>
        </RelativeLayout>
        <io.agora.vlive.ui.components.LiveRoomParticipantLayout
            android:id="@+id/host_in_participant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/live_host_in_seat_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/host_in_top_participant_layout"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:overScrollMode="never"
        android:background="@color/black_alpha"/>

    <io.agora.vlive.ui.components.LiveBottomButtonLayout
        android:id="@+id/host_in_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_bottom_layout_height"
        android:layout_alignParentBottom="true"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    <io.agora.vlive.ui.components.LiveRoomMessageList
        android:id="@+id/message_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_message_list_height"
        android:layout_above="@id/host_in_bottom_layout"
        android:padding="@dimen/activity_horizontal_margin"
        android:overScrollMode="never"/>
</RelativeLayout>
