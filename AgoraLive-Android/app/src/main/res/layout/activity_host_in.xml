<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_background">
    <RelativeLayout
        android:id="@+id/host_in_top_participant_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_host_in_top_layout_height"
        android:layout_alignParentTop="true"
        android:padding="@dimen/activity_horizontal_margin">
        <RelativeLayout
            android:id="@+id/host_video_layout"
            android:layout_width="@dimen/live_host_in_video_size"
            android:layout_height="@dimen/live_host_in_video_size">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fake_icon_1"/>
        </RelativeLayout>
        <io.agora.vlive.ui.components.LiveRoomParticipantLayout
            android:id="@+id/host_in_participant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/host_video_layout"
            android:layout_marginStart="@dimen/activity_horizontal_margin"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/host_in_participant"
            android:layout_toEndOf="@id/host_video_layout"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:gravity="center_horizontal">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/host_in_room_name"
                android:layout_width="@dimen/live_host_in_room_name_max_width"
                android:layout_height="match_parent"
                android:textAlignment="gravity"
                android:gravity="center"
                android:lines="1"/>
        </LinearLayout>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/live_host_in_seat_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/host_in_top_participant_layout"
        android:overScrollMode="never"
        android:background="@color/black_alpha"/>

    <io.agora.vlive.ui.components.LiveBottomButtonLayout
        android:id="@+id/host_in_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_bottom_layout_height"
        android:layout_alignParentBottom="true"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <io.agora.vlive.ui.components.LiveRoomMessageList
        android:id="@+id/message_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/live_host_in_seat_recycler"
        android:layout_above="@id/host_in_bottom_layout"
        android:padding="@dimen/activity_horizontal_margin"
        android:overScrollMode="never"/>

    <io.agora.vlive.ui.components.LiveMessageEditLayout
        android:id="@+id/message_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_message_edit_height"
        android:paddingTop="@dimen/live_message_text_margin"
        android:paddingBottom="@dimen/live_message_text_margin"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>
</RelativeLayout>
