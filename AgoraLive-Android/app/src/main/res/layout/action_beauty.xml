<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/live_room_action_sheet_beauty_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/round_top_corner_white_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_room_action_sheet_text_item_height"
        android:paddingStart="@dimen/live_room_action_sheet_margin"
        android:paddingEnd="@dimen/live_room_action_sheet_margin">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/live_room_action_sheet_text_item_height"
            android:textAlignment="gravity"
            android:gravity="center"
            android:text="@string/live_room_beauty_action_sheet_title"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/gray_darkest"/>
        <View
            android:id="@+id/beauty_switch"
            android:layout_width="@dimen/switch_width"
            android:layout_height="@dimen/switch_height"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/switch_background"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_room_action_sheet_item_divider_height"
        android:layout_marginStart="@dimen/live_room_action_sheet_margin"
        android:layout_marginEnd="@dimen/live_room_action_sheet_margin"
        android:background="@color/gray_lightest"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_room_action_sheet_seek_bar_item_height"
        android:paddingStart="@dimen/live_room_action_sheet_margin"
        android:paddingEnd="@dimen/live_room_action_sheet_margin">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/beauty_title_brightness"
            android:layout_width="@dimen/live_room_action_sheet_beauty_title_width"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/live_room_beauty_action_sheet_brightness"
            android:textAlignment="gravity"
            android:gravity="start"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/beauty_value_brightness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textAlignment="gravity"
            android:gravity="center"/>
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/beauty_brightness_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/live_room_setting_progress_height"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/beauty_value_brightness"
            android:layout_toEndOf="@id/beauty_title_brightness"
            style="@style/action_sheet_beauty_seek_bar"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_room_action_sheet_seek_bar_item_height"
        android:paddingStart="@dimen/live_room_action_sheet_margin"
        android:paddingEnd="@dimen/live_room_action_sheet_margin">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/beauty_title_smooth"
            android:layout_width="@dimen/live_room_action_sheet_beauty_title_width"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/live_room_beauty_action_sheet_smooth"
            android:textAlignment="gravity"
            android:gravity="start"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/beauty_value_smooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textAlignment="gravity"
            android:gravity="center"/>
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/beauty_smooth_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/live_room_setting_progress_height"
            android:layout_toEndOf="@id/beauty_title_smooth"
            android:layout_toStartOf="@id/beauty_value_smooth"
            android:layout_centerVertical="true"
            style="@style/action_sheet_beauty_seek_bar"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_room_action_sheet_seek_bar_item_height"
        android:paddingStart="@dimen/live_room_action_sheet_margin"
        android:paddingEnd="@dimen/live_room_action_sheet_margin">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/beauty_title_temperature"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="start"
            android:text="@string/live_room_beauty_action_sheet_temperature"
            android:textAlignment="gravity"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/beauty_value_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textAlignment="gravity"
            android:gravity="center"/>
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/beauty_temperature_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/live_room_setting_progress_height"
            android:layout_toEndOf="@id/beauty_title_temperature"
            android:layout_toStartOf="@id/beauty_value_temperature"
            android:layout_centerVertical="true"
            style="@style/action_sheet_beauty_seek_bar"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_room_action_sheet_seek_bar_item_height"
        android:layout_marginBottom="@dimen/live_room_action_sheet_margin"
        android:paddingStart="@dimen/live_room_action_sheet_margin"
        android:paddingEnd="@dimen/live_room_action_sheet_margin">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/beauty_title_contrast"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="start"
            android:text="@string/live_room_beauty_action_sheet_contrast"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/beauty_title_contrast"
            android:layout_alignParentEnd="true">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/beauty_contrast_low"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/beauty_contrast_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/live_room_beauty_action_sheet_contrast_low"
                style="@style/beauty_action_sheet_button"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/beauty_contrast_medium"
                app:layout_constraintStart_toEndOf="@id/beauty_contrast_low"
                app:layout_constraintEnd_toStartOf="@id/beauty_contrast_high"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/live_room_beauty_action_sheet_contrast_medium"
                style="@style/beauty_action_sheet_button"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/beauty_contrast_high"
                app:layout_constraintStart_toEndOf="@id/beauty_contrast_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/live_room_beauty_action_sheet_contrast_high"
                style="@style/beauty_action_sheet_button"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</LinearLayout>
